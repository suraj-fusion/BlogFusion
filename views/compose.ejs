<%- include('partials/header') %>

<h1>Compose</h1>

<form action="/compose" method="post">
<div class="form-group">  <!-- all form inputs are grouped together using the div with class="form-group" -->
<label for="Title">Title</label>
<input type="text" name="postTitle" class="form-control" autofocus autocomplete="off">
<label for="Post">Post</label>
<textarea name="postContent" rows="5" col="30" class="form-control"></textarea>
</div>
<button type="submit" name="button" class="btn btn-md btn-primary">Publish </button>
</form>
<%- include('partials/footer'); %>