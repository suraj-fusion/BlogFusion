<%- include('partials/header'); %>



<div class="container mt-5">
    
  
    <div class="row">
      <div class="col-sm-4" style=" text-align:center;margin-left:32%;">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" autocomplete="off"  autofocus class="form-control" name="email">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark" style="background-color:#1abc9c ;color:white" >Login</button>
            </form>
  
          </div>
        </div>
      </div>


    </div>
</div>








<%- include('partials/footer'); %>